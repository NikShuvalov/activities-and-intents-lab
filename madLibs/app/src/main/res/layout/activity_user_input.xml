<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="shuvalov.nikita.madlibs.UserInputActivity">

    <EditText
        android:id="@+id/adj0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Adjective"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/adj1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adj0"
        android:paddingTop="10sp"
        android:hint="Adjective" />
    <EditText
        android:id="@+id/noun0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adj1"
        android:paddingTop="10sp"
        android:hint="Noun" />
    <EditText
        android:id="@+id/noun1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/noun0"
        android:paddingTop="10sp"
        android:hint="Noun" />
    <EditText
        android:id="@+id/animals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/noun1"
        android:paddingTop="10sp"
        android:hint="Animal(Plural)" />
    <EditText
        android:id="@+id/game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/animals"
        android:paddingTop="10sp"
        android:hint="Game" />

    <Button
        android:id="@+id/completeButt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game"
        android:text="Generate Mad Lib using above words"/>

</RelativeLayout>
